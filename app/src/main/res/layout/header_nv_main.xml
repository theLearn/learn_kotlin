<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryDark"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/large_dimen"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_marginTop="@dimen/large_dimen"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/img_large"
            android:layout_height="@dimen/img_large"
            android:background="@mipmap/user_icon"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />

        <ImageView
            android:layout_width="@dimen/img_small"
            android:layout_height="@dimen/img_small"
            android:background="@mipmap/add_family_member"/>

        <ImageView
            android:layout_width="@dimen/img_small"
            android:layout_height="@dimen/img_small"
            android:layout_marginLeft="@dimen/large_dimen"
            android:background="@mipmap/quit_family"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_nv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_dimen"
        android:text="@string/tip"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/tv_middle"/>

</LinearLayout>